template("runtime_executable") {
  executable(target_name) {
    output_dir = "${root_build_dir}${runtime_relative_path}/${platform_name}/${binary_folder_name}"
    forward_variables_from(invoker, "*")
  }
}

template("runtime_library") {
  static_library(target_name) {
    output_dir = "${root_build_dir}${runtime_relative_path}/${platform_name}/${library_folder_name}"
    forward_variables_from(invoker, "*")
  }
}